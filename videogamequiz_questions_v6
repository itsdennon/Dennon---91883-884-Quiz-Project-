score = 0
#Asking user the question
answer1 = input("What was Minecraft's release date? \nA. 18 November 2011 \nB. 24 October 2010 \nC. 09 May 2012 \nAnswer : ")
if answer1 == "A" or answer1 == "a" or answer1 == "18 November 2011":
    score += 1
    print("Correct!")
    print("Score : ", score)
    print("\n")
else:
    print("Incorrect, The answer is 18 November 2011")
    print("Score: ", score)
    print("\n")







